{
  "name": "killua-beta",
  "version": "0.0.1",
  "description": "killua is a local-storage management library for React applications.",
  "repository": "https://github.com/sys113/killua.git",
  "homepage": "https://killua-landing.vercel.app",
  "keywords": [
    "react",
    "react-localstorage",
    "manage-localstorage",
    "localstorage",
    "management-localstorage",
    "react-localstorage-management"
  ],
  "author": "hamid shahsavani",
  "license": "MIT",
  "peerDependencies": {
    "@types/react": ">=17.0.0",
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/crypto-js": "^4.1.2",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "eslint": "^8.49.0",
    "husky": "^8.0.0",
    "prettier": "^3.0.3",
    "rollup": "^3.29.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "crypto-js": "^4.2.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "test": "vitest --run",
    "test:watch": "vitest",
    "clean": "rm -rf lib/* ",
    "dev": "rollup --config ./configs/rollup.config.mjs --watch",
    "build": "yarn run clean && npm run build:cjs && npm run build:esm",
    "build:esm": "rollup --config ./configs/rollup.config.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./index.d.ts"
}
