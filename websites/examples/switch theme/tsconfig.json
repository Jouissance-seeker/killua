{
  "compilerOptions": {
    "target": "ESNext", // Updated to ESNext for the latest features
    "module": "ESNext", // Updated to ESNext for the latest module syntax
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx", 
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node", 
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}